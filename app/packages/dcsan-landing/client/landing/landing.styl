.topBubble {
    position: fixed;
    top 220px
    margin-right 5%
    margin-left 15%
    z-index 1

    padding: 0px;
    background: #FFFFFF;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    border: 4px solid black;
    padding: 10px;
    font-family: 'Mouse Memoirs', sans-serif;
    font-size: 30px;
}

.topBubble:after {
    margin-right 25%
    margin-left 35%

    content: '';
    position: absolute;
    border-style: solid;
    border-width: 0 15px 15px;
    border-color: #FFFFFF transparent;
    display: block;
    width: 0;
    z-index: 1;
    top: -15px;
}

.topBubble:before {
    margin-right 25%
    margin-left 35%
  
    content: '';
    position: absolute;
    border-style: solid;
    border-width: 0 18px 18px;
    border-color: #000 transparent;
    display: block;
    width: 0;
    z-index: 0;
    top: -22px;
}




template(name='landing')

  a(href=menuData.startUrl)
    img.topImageMain(src='/splash/main/bgAbby.jpg')
    +topLogo

  +ClickHereBox(menuData=menuData)

  each menuData.items
    .landingSlab(style="{{style}}")
      a(href="/scenes/intro/start")
        img.pageImg(src="{{img}}")
        .title {{hl title}}
        .infoBox {{hl info}}

  +ClickHereBox(menuData=menuData)


template(name='ClickHereBox')

  .regNowBox
    span.heading {{{hl menuData.top.cta1 }}}
    br
    span.heading {{{hl menuData.top.cta2 }}}

    if loggedIn
      a(href=menuData.startUrl text='continue')
        +landingButton(href=menuData.startUrl text="START!!")
      br

    else
      a(href=menuData.startUrl text='continue')
        +landingButton(href=menuData.startUrl text="START!")


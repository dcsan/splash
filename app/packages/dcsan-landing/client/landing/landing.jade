template(name='landing')

  +topLogo
  .fixedImageBox(style="background-image: url(/splash/main/bgAbby.jpg);height: 500px")
  .topBubble.TM {{{homehl menuData.top.cta1 }}}

  .topSpacer

  +ClickHereBox(data=this)

  each menuData.items
    a(href=url)
      .landingSlab(style="{{style}}")
        img.pageIcon(src="{{img}}")
        .title {{homehl title}}
        .infoBoxSmall {{homehl info}}

  +ClickHereBox(data=this)

  br
  br
  br
  br


template(name='ClickHereBox')

  .regNowBox
    if data.isLanding
      +landingButton(href=data.menuData.startUrl text="START!!")


// these defs have to be before other 
// .stylus files are loaded

@import url('http://fonts.googleapis.com/css?family=Oswald');
@import url('http://fonts.googleapis.com/css?family=Mouse Memoirs');
@import url(//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css);


// functions

bevelBorder(sz, baseColor)
    border-top: (sz)px solid lighten(baseColor, 50%);
    border-left: (sz)px solid lighten(baseColor, 50%);
    border-right: (sz)px solid darken(baseColor, 50%);
    border-bottom: (sz)px solid darken(baseColor, 50%);

// for things we're gonna reveal animate
hidden()
    // border: 1px solid red
    display: none;
    opacity: 0;

frameBox()
    opacity: 1;
    position: absolute;
    top: 0px;
    height: 450px;

mouseFont(sz)
    font-family: 'Mouse Memoirs', sans-serif;
    font-size: (sz)px;

fontOswald(sz)
    font-family: 'Oswald', sans-serif;
    font-size: (sz)px;





.scrollingBox {
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	/*border: 2px solid blue;*/
	overflow-y: scroll;
}

.pageHeader {
	font-family: 'Oswald', sans-serif;
	font-size: 30px;
	color: white;
	cursor: pointer;
}


/*default styles*/

body {
  font-family: sans-serif;
  margin: 0px;
  padding: 0px;
  // font-size: 62.5%;   // 1em = 10px
  // font-size: 100%;   // 1em = 10px
}

blockquote {
  padding: 10px;
  color: gray;
  font-family: sans-serif;
  font-style: italic;
}

a {
  text-decoration: none;
  cursor: pointer;
}
a:hover {
  text-decoration: none;
  cursor: pointer;
}


h1 {
  font-family: 'Oswald', sans-serif;
  font-size: 4rem;  //60px
  color: #1d0372;
}
h2 {
  font-family: 'Oswald', sans-serif;
  font-size: 3rem;
}
h3 {
  font-family: 'Oswald', sans-serif;
  font-size: 2rem;
}
h4 {
  font-family: 'Oswald', sans-serif;
  font-size: 1.5rem;
}


p {
  font-size: 2rem;
}

.t1 {
  font-family: 'Oswald', sans-serif;
  font-size: 4rem;
  color: #1d0372;
}
.t2 {
  font-family: 'Oswald', sans-serif;
  font-size: 3.5rem;
}
.t3 {
  font-family: 'Oswald', sans-serif;
  font-size: 3rem;
}
.t4 {
  font-family: 'Oswald', sans-serif;
  font-size: 2rem;
}

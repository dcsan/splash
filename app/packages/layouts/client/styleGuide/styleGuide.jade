template(name='styleGuide')
  //- +StatusBar(text1='styleGuide')
  +MenuSpacer

  .container

    h1 Heading 1
    h2 Heading 2
    h3 Heading 3
    h4 Heading 4
    hr

    h1 Buttons

    +nextButton(text="nextButton")
    br
    +backButton(text="backButton")

    br

    span.btn.btn-lg.btn-default btn-lg
    span.btn.btn-sm.btn-default btn-sm

    hr
    .lessonTitleBox
      .locked
        a
          i.fa.fa-lock
          span.lessonTitle lessonTitleLocked

    .lessonTitleBox
      .open
        a
          i.fa.fa-play
          span.lessonTitle lessonTitleLocked


    .lessonTitleBox
      .inner
        .tl titleBox
        .sub subheading


    hr
    h1 Patterns
    .patternSwatch.bigStripesBlue
      .span.label.label-info bigStripesBlue

    .patternSwatch.bigStripesYellow
      .span.label.label-info bigStripesYellow

    .patternSwatch.bigStripesRed
      .span.label.label-info bigStripesRed

    .patternSwatch.thinStripesRed
      .span.label.label-info thinStripesRed

    .patternSwatch.crossSlate
      .span.label.label-info crossSlate

    hr


    h1 Typography

    span.label.label-default Label Default

    p Some body text
    ul
      li a bulletted list item
      li another item
      li and another

    .well Text in a well

    br
    br
    br
